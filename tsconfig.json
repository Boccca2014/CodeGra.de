{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "es2017",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}
